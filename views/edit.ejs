<form method="POST" action="/todos/update/<%= doc._id %>">
  <div>
    <label>Todo Title: </label>
    <input type="text" name="title" placeholder="Add title" value="<%= doc.title %>" />
  </div>
  <div>
    <label>Todo description: </label>
    <textarea name="description" placeholder="Add description"><%= doc.description %></textarea>
  </div>
  <button type="submit">Save</button>
</form>
